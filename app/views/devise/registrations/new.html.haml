.col-sm-8
  - breadcrumb :signup
  .col-sm-6.col-sm-offset-3
    %h2= t :sign_up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .form-group{ class: resource.errors[:name].empty? ? "" : "has-error"}
        = f.label :name, t(:name), class: "control-label" 
        = f.text_field :name, class: "form-control", autofocus: true, placeholder: t(:name)
        %p= resource.errors[:name].empty? ? "" : resource.errors[:name].first
      
      .form-group{ class: resource.errors[:email].empty? ? "" : "has-error"}
        = f.label :email, t(:email), class: "control-label", for: "user_email"
        = f.email_field :email, class: "form-control", autofocus: true, placeholder: t(:email)
        %p= resource.errors[:email].empty? ? "" : resource.errors[:email].first

     

      .form-group{ class: resource.errors[:password].empty? ? "" : "has-error"}
        = f.label :password, t(:password), class: "control-label" 
        = f.password_field :password, class: "form-control", autofocus: true, placeholder: t(:password)
        %p= resource.errors[:password].empty? ? "" : resource.errors[:password].first
        - if @validatable
          %em= "#{@minimum_password_length} minimum"

      .form-group{ class: resource.errors[:password_confirmation].empty? ? "" : "has-error"}
        = f.label :password_confirmation, t(:password_confirmation), class: "control-label" 
        = f.password_field :password_confirmation, class: "form-control", autofocus: true, placeholder: t(:password_confirmation)
        %p= resource.errors[:password_confirmation].empty? ? "" : resource.errors[:password_confirmation].first
      

      %button.btn.btn-large.btn-info.col-sm-12
        = t :sign_up

 
 
