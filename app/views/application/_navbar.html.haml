.row
  .jumbotron.head-background
    //= image_tag('head/3.jpg', class: 'img-responsive')
    %h1 Привет, мир!
    %p Тут будет картинка, логотип и в таком духе
    %p Плюс инфа разная


%nav#nav.navbar.navbar-default.navbar-shadow(data-spy="affix" data-offset-top="300")
  .container
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to t(:home), main_pages_path, class: "navbar-brand"
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          = link_to(t(:catalogs), price_path)

        %li.dropdown
          %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button", 'aria-labelledby'=>"dropdownMenu1"}
            = t(:about_us)
            %span.caret
          %ul.dropdown-menu{:role => "menu"}
            %li
              %a{:href => "/working"}= t(:shop)
            %li
              %a{:href => "/working"}= t(:forum)
            %li
              %a{:href => "/working"}= t(:vacantions)
            %li.divider
            %li
              %a{:href => "/working"}= t(:our_works)
            %li
              %a{:href => "/working"}= t(:news)

        %li
          %a{:href => "/contact"}= t(:contacts)
        %li
          %a{:href => "/delivery"}= t(:delivery)

      %ul.nav.navbar-nav
        %li
          %a#cart_item{:href => "/cart"}
            = t :shopping_cart
            %span.glyphicon.glyphicon-shopping-cart

            - unless @cart.line_items.empty?
              %span.badge
                = @cart.total

        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button", 'aria-labelledby'=>"dropdownMenu1"}
              = t(:hello)
              %span.caret
            %ul.dropdown-menu.dropdown-color{:role => "menu"}
              %li
                = link_to t(:profile), user_root_path
              %li
                = link_to t(:exit), destroy_user_session_path, method: :delete

        - else
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button", 'aria-labelledby'=>"dropdownMenu2"}
              = t(:enter)
              %span.caret
            %ul.dropdown-menu.dropdown-color{:role => "menu"}
              %li
                = link_to t(:login),   new_user_session_path

                = link_to t(:sign_up), new_user_registration_path

      %form.navbar-form{:role => "search"}
        .form-group
          %input.form-control{:placeholder => "#{t :find_line}", :type => "text"}
        %button.btn.btn-default{:type => "submit"}
          = t :find
