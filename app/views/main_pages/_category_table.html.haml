.col-md-12
  .row
    .col-md-10.center-block
      - element.in_groups_of(3, false) do |group|
        - group.each do |category|
          .media.media-shadow
            .col-md-2
              %a.pull-left(href="#")
                = image_tag(category.asset.url, size: "100x100", class:'media-object image-shadow')

            .media-body
              = link_to content_tag(:span, category.name, class: "#{category.name}" + "_h3" ), category
              %p= category.text.html_safe
    .col-md-10.center-block
      %ul.pagination
        - element.in_groups_of(3, false).each.with_index(1) do |x, ind|
          %li
            %a(href="#")= ind
